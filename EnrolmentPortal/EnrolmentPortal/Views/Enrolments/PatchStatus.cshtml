@{
    ViewData["Title"] = "Patch Status";
    var enrolmentId = (int)ViewBag.EnrolmentId;
    var currentStatus = (string)ViewBag.CurrentStatus;
}

<h1>Patch Enrolment Status</h1>

<p><strong>Current status:</strong> @currentStatus</p>

<form asp-action="PatchStatus" asp-route-id="@enrolmentId" method="post">
    <div class="mb-3">
        <label for="newStatus" class="form-label">New Status</label>
        <input id="newStatus" name="newStatus" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Apply Patch</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

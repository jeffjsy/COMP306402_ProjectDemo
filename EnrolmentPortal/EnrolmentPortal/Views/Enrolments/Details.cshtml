@model EnrollmentPortal.Services.EnrollmentReadDTO

@{
    ViewData["Title"] = "Enrolment Details";
}

<h1>Enrolment Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.EnrollmentId</dd>

        <dt class="col-sm-2">Enrollment Date</dt>
        <dd class="col-sm-10">@Model.EnrollmentDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Student Id</dt>
        <dd class="col-sm-10">@Model.StudentId</dd>

        <dt class="col-sm-2">Program Id</dt>
        <dd class="col-sm-10">@Model.ProgramId</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.EnrollmentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>

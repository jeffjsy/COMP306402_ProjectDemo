@model EnrollmentPortal.Services.ProgramCreateDTO

@{
    ViewData["Title"] = "Create Program";
}

<h1>Create Program</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DurationMonths" class="form-label"></label>
        <input asp-for="DurationMonths" class="form-control" />
        <span asp-validation-for="DurationMonths" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TuitionFee" class="form-label"></label>
        <input asp-for="TuitionFee" class="form-control" />
        <span asp-validation-for="TuitionFee" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
